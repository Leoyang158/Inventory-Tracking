<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Item</h1>
    <div class="col-6 offset-3">
        <form action="/lists/<%=good._id%>?_method=PUT" method="post">
            <div class="mb-3">
                <label class="form-label" for="item[itemName]">Item Name</label>
                <input class="form-control" type="text" id="year" name="item[itemName]"
                    value="<%=good.itemName %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="make">Amount</label>
                <input class="form-control" type="number" id="make" name="item[amount]"
                    value="<%=good.amount %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="item[startDate]">Started Date</label>
                <input class="form-control" type="date" id="model" name="item[startDate]"
                    value="<%=good.startDate %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="item[expireDate]">Expired Date</label>
                <input class="form-control" type="date" id="type" name="item[expireDate]"
                    value="<%=good.expireDate %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="item[description]">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="item[description]"><%=good.description%></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update</button>
            </div>
        </form>
        <a href="/lists/<%= good._id%>">Back To Item</a>

    </div>
</div>