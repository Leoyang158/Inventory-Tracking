<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Item</h1>
    <div class="col-6 offset-3">
        <form action="/lists/<%=car._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="year">Item Name</label>
                <input class="form-control" type="text" id="year" name="item[item]"
                    value="<%=car.year %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="make">Amount</label>
                <input class="form-control" type="number" id="make" name="item[amount]"
                    value="<%=car.make %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="model">Started Date</label>
                <input class="form-control" type="date" id="model" name="item[startedDate]"
                    value="<%=car.model %>">
            </div>
            <div class="mb-3">
                <label class="form-label" type">Expired Date</label>
                <input class="form-control" type="date" id="type" name="item[expiredDate]"
                    value="<%=car.type %>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="car[description]"><%= car.description%></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Item</button>
            </div>
        </form>
        <a href="/lists/<%= car._id%>">Back To Car</a>

    </div>
</div>