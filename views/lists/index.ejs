<% layout('layouts/boilerplate')%>
<style>
    #listTitle{
        font-family: 'Righteous', cursive;
        font-size: 80px;
        color: #000000;
    }

    #card{
        font-family: 'Righteous', cursive;
        color: #1d1a1a;
        border-radius: 1%;
        border: aqua;
    }

    #cardBody{
        font-size: 40px;
    }

    #newButton{
        font-family: 'Righteous', cursive;
    }
</style>
<h1 id="listTitle">All Items</h1>
<br>

<% for (let item of items){ %>
<div class="card w-75" id="card">
    <div class="card-body">
      <h5 class="card-title" id="cardBody"><%= item.itemName %></h5>
      <p class="card-text">Total Reviews: <%= item.reviews.length %></p>
      <a href="/lists/<%= item._id%>" class="btn btn-primary">Details</a>
    </div>
</div>
<br>
<% }%>

<a href="/search" type="button" class="btn btn-primary btn-lg btn-block" id="newButton"> Add Your Own Item </a>